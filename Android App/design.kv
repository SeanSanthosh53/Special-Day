
#: import ScrollEffect kivy.effects.scroll.ScrollEffect
#: import Window kivy.core.window.Window


ScreenManager:
	id: manager
	
	HomeScreen:
		name: "home"
		id: home

# Home Screen/Main Menu
<HomeScreen>:
	MDBoxLayout:
		orientation: "vertical"
		padding: 20

		MDLabel:
			text: "App Name"
			font_size: 40
			size_hint_y: .3
			size_hint_x: .5
			pos_hint: {"center_x": .5}
			halign: "center"
			valign: "middle"

			canvas.before:
				Color:
					rgba: app.theme_cls.primary_color
				RoundedRectangle:
					pos: self.pos
					size: self.size
					radius: [20,]

		ScrollView:
			effect_cls: ScrollEffect

			StackLayout:
				spacing: (10*(Window.width/Window.height)**3 + 45, 40)
				padding: 40
				size_hint_y: None
				height: self.minimum_height
				id: FtrBox

				CustomIconButton:
					icon: "dev-to"

				CustomIconButton:

				CustomIconButton:

				CustomIconButton:

				CustomIconButton:

				CustomIconButton:


# Custom Icon Buttons	
<CustomIconButton>:
	orientation: "vertical"
	spacing: 5
	padding: 0

	icon: "clipboard"

	cor: Window.size[0] / 4 if Window.size[0] / 4 <= 150 else 150
	md_bg_color: (0, 0, 0, 0)
	size_hint: None, None
	size: Window.size[0] / 4.5, self.cor
	pos_hint: {"center_x": .5, "center_y": .5}
	on_press:
		print(Window.size[0])
		print(10*(Window.width/Window.height)**3 + 45)

	
	MDBoxLayout:
		orientation: "vertical"
		padding: 8
		md_bg_color: (1, 1, 0, 0)
		spacing: 5
		canvas.before:
			Color:
				rgba:(25/255, 118/255, 210/255, 1) if root.hovering else (33/255, 150/255, 243/255, 1)
			RoundedRectangle:
				pos: self.pos if not root.hovering else (self.pos[0]-10, self.pos[1]-10)
				size: self.size if not root.hovering else (self.size[0]+20, self.size[1]+20)
				radius: [30,]

		MDIcon:
			icon: root.icon
            theme_text_color: 'Custom'
            font_size: str((Window.height/720)*90) + 'sp'
            halign: 'center'

        MDLabel:
            text: "Feature"
            theme_text_color: 'Custom'
            font_size: str((Window.height/720)*25) + 'sp'
            halign: 'center'
            bold: True
            size_hint_y: 0.4
            markup: True



